<local:BasePage x:Class="TodoApp2.NotificationPage"
                x:TypeArguments="core:NotificationPageViewModel"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                xmlns:local="clr-namespace:TodoApp2" 
                xmlns:core="clr-namespace:TodoApp2.Core;assembly=TodoApp2.Core"
                mc:Ignorable="d" 
                d:DesignHeight="450" d:DesignWidth="400"
                Title="OptionsPage">

    <Grid>
        <Border Background="CornflowerBlue"
                CornerRadius="5"
                Margin="50 20">

            <TextBlock 
                Margin="20"
                Text="{Binding ApplicationViewModel.NotificationTask.Content, Source={x:Static local:ViewModelLocator.Instance}}"
                />

        </Border>
    </Grid>
</local:BasePage>
