<local:BasePage  
      x:Class="TodoApp2.SettingsPage"
      x:TypeArguments="core:SettingsPageViewModel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:core="clr-namespace:TodoApp2.Core;assembly=TodoApp2.Core"
      xmlns:local="clr-namespace:TodoApp2"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingsPage">

    <Border >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--Settings title-->
            <Grid Grid.Row="0" Margin="0 5 0 15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    Text="Settings"
                    Style="{DynamicResource CategoryTextBlockStyle}"
                    Margin="20 0 0 0"
                />

                <Button
                    Grid.Column="2"
                    Style="{DynamicResource SettingsButtonStyle}"
                    Content="{DynamicResource SegoeIconBack}"
                    Command="{Binding BackToPrevPageCommand}"
                    />

            </Grid>

            <Border Name="SettingsPanel" Grid.Row="1" Background="Transparent">

                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <!--FIRST-->
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="20"/>
                        
                        <!--SECOND-->
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="20"/>

                        <!--PLACEHOLDER-->
                        <RowDefinition />
                        <!--VERSION-->
                        <RowDefinition Height="20"/>

                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <!--FIRST ==========================================--> 
                    <ToggleButton
                        Name="AlwaysOnTopToggle"
                        Grid.Row="0"
                        Grid.Column="0"
                        Style="{DynamicResource ToggleSwitchLeftStyle}"
                        IsChecked="{Binding ApplicationViewModel.IsAlwaysOnTop, Source={x:Static local:ViewModelLocator.Instance}, Mode=TwoWay}"
                        />

                    <TextBlock 
                        Text="Always on top" 
                        Grid.Row="0" 
                        Grid.Column="2" 
                        Style="{DynamicResource SettingsDescriptionStyle}"
                        />

                    <!--SECOND ==========================================-->
                    
                    <ToggleButton
                        Name="QuickActionsToggle"
                        Grid.Row="2"
                        Grid.Column="0"
                        Style="{DynamicResource ToggleSwitchLeftStyle}"
                        IsChecked="{Binding ApplicationViewModel.IsQuickActionsEnabled, Source={x:Static local:ViewModelLocator.Instance}, Mode=TwoWay}"
                        />

                    <TextBlock 
                        Text="Quick actions" 
                        Grid.Row="2" 
                        Grid.Column="2" 
                        Style="{DynamicResource SettingsDescriptionStyle}"
                        />

                    <!--VERSION ==========================================-->

                    <Grid Grid.Row="5"
                        Grid.Column="1"
                        Grid.ColumnSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <Border 
                            Grid.Column="1"
                            Background="{DynamicResource VersionLabelBackgroundBrush}"
                            CornerRadius="4"
                            >
                                <TextBlock 
                                Foreground="{DynamicResource VersionLabelForegroundBrush}"
                                HorizontalAlignment="Center"
                                Margin="10 0 10 0"
                                VerticalAlignment="Center">Version 1.0.0</TextBlock>
                        </Border>
                    </Grid>
                    

                </Grid>
            </Border>

        </Grid>
    </Border>
</local:BasePage>