<local:BasePage
    x:Class="TodoApp2.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:core="clr-namespace:TodoApp2.Core;assembly=TodoApp2.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TodoApp2"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SettingsPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:TypeArguments="core:SettingsPageViewModel"
    mc:Ignorable="d">

    <Border>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Settings title  -->
            <Grid Grid.Row="0" Margin="0 5 5 15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    Margin="15 0 0 0"
                    Style="{DynamicResource SideMenuTitleTextBlockStyle}"
                    Text="Settings" />

                <Button
                    Grid.Column="2"
                    Command="{Binding BackToPrevPageCommand}"
                    Content="{DynamicResource SegoeIconBack}"
                    Style="{DynamicResource SettingsButtonStyle}" />

            </Grid>

            <ScrollViewer Grid.Row="1" Template="{DynamicResource TaskListControlScrollViewerControlTemplate}">

                <Border Name="SettingsPanel" Background="Transparent">

                    <StackPanel Margin="15" Orientation="Vertical">

                        <!--  Always on top  -->
                        <StackPanel
                            Height="20"
                            Margin="0 0 0 10"
                            Orientation="Horizontal">
                            <ToggleButton
                                Name="AlwaysOnTopToggle"
                                Margin="0 0 20 0"
                                IsChecked="{Binding ApplicationViewModel.ApplicationSettings.IsAlwaysOnTop, Source={x:Static local:ViewModelLocator.Instance}, Mode=TwoWay}"
                                Style="{DynamicResource ToggleSideMenuStyle}" />
                            <TextBlock Style="{DynamicResource SettingsDescriptionStyle}" Text="Always on top" />
                        </StackPanel>

                        <!--  Quick actions  -->
                        <StackPanel
                            Height="20"
                            Margin="0 10 0 10"
                            Orientation="Horizontal">
                            <ToggleButton
                                Name="QuickActionsToggle"
                                Margin="0 0 20 0"
                                IsChecked="{Binding ApplicationViewModel.ApplicationSettings.IsQuickActionsEnabled, Source={x:Static local:ViewModelLocator.Instance}, Mode=TwoWay}"
                                Style="{DynamicResource ToggleSideMenuStyle}" />
                            <TextBlock Style="{DynamicResource SettingsDescriptionStyle}" Text="Quick actions on items" />
                        </StackPanel>

                        <!--  Reminder button  -->
                        <StackPanel
                            Height="20"
                            Margin="20 0 0 10"
                            Orientation="Horizontal">
                            <ToggleButton
                                Name="QuickActionReminderToggle"
                                Margin="0 0 20 0"
                                IsChecked="{Binding ApplicationViewModel.ApplicationSettings.IsQuickActionsReminderEnabled, Source={x:Static local:ViewModelLocator.Instance}, Mode=TwoWay}"
                                Style="{DynamicResource ToggleSideMenuStyle}" />
                            <TextBlock Style="{DynamicResource SettingsDescriptionStyle}" Text="Reminder button" />
                        </StackPanel>
                        <!--  Marker color button  -->
                        <StackPanel
                            Height="20"
                            Margin="20 0 0 10"
                            Orientation="Horizontal">
                            <ToggleButton
                                Name="QuickActionColorToggle"
                                Margin="0 0 20 0"
                                IsChecked="{Binding ApplicationViewModel.ApplicationSettings.IsQuickActionsColorEnabled, Source={x:Static local:ViewModelLocator.Instance}, Mode=TwoWay}"
                                Style="{DynamicResource ToggleSideMenuStyle}" />
                            <TextBlock Style="{DynamicResource SettingsDescriptionStyle}" Text="Marker color button" />
                        </StackPanel>
                        <!--  Delete button  -->
                        <StackPanel
                            Height="20"
                            Margin="20 0 0 10"
                            Orientation="Horizontal">
                            <ToggleButton
                                Name="QuickActionTrashToggle"
                                Margin="0 0 20 0"
                                IsChecked="{Binding ApplicationViewModel.ApplicationSettings.IsQuickActionsTrashEnabled, Source={x:Static local:ViewModelLocator.Instance}, Mode=TwoWay}"
                                Style="{DynamicResource ToggleSideMenuStyle}" />
                            <TextBlock Style="{DynamicResource SettingsDescriptionStyle}" Text="Delete button" />
                        </StackPanel>

                        <!--  Item background  -->
                        <StackPanel
                            Height="20"
                            Margin="0 10 0 10"
                            Orientation="Horizontal">
                            <ToggleButton
                                Name="ItemBackgroundEnabledToggle"
                                Margin="0 0 20 0"
                                IsChecked="{Binding ApplicationViewModel.ApplicationSettings.IsItemBackgroundVisible, Source={x:Static local:ViewModelLocator.Instance}, Mode=TwoWay}"
                                Style="{DynamicResource ToggleSideMenuStyle}" />
                            <TextBlock Style="{DynamicResource SettingsDescriptionStyle}" Text="Item background visible" />
                        </StackPanel>

                        <!--  Modification date  -->
                        <StackPanel
                            Height="20"
                            Margin="0 0 0 10"
                            Orientation="Horizontal">
                            <ToggleButton
                                Name="ModificationDateVisibleToggle"
                                Margin="0 0 20 0"
                                IsChecked="{Binding ApplicationViewModel.ApplicationSettings.IsModificationDateVisible, Source={x:Static local:ViewModelLocator.Instance}, Mode=TwoWay}"
                                Style="{DynamicResource ToggleSideMenuStyle}" />
                            <TextBlock Style="{DynamicResource SettingsDescriptionStyle}" Text="Modification date on items" />
                        </StackPanel>

                        <!--  Rounded window corners  -->
                        <StackPanel
                            Height="20"
                            Margin="0 0 0 10"
                            Orientation="Horizontal">
                            <ToggleButton
                                Name="RoundedCornersToggle"
                                Margin="0 0 20 0"
                                IsChecked="{Binding ApplicationViewModel.ApplicationSettings.RoundedWindowCorners, Source={x:Static local:ViewModelLocator.Instance}, Mode=TwoWay}"
                                Style="{DynamicResource ToggleSideMenuStyle}" />
                            <TextBlock Style="{DynamicResource SettingsDescriptionStyle}" Text="Rounded window corners" />
                        </StackPanel>

                        <!--  Theme  -->
                        <StackPanel Margin="0 10 0 10" Orientation="Vertical">
                            <TextBlock
                                Style="{DynamicResource SettingsDescriptionStyle}"
                                Text="Theme"
                                Margin="0 0 0 4" />
                            <ComboBox
                                FontSize="{StaticResource FontSizeSmall}"
                                FontFamily="{StaticResource Ubuntu}"
                                ItemsSource="{Binding ThemeListProvider.Items, Source={x:Static local:ViewModelLocator.Instance}}"
                                SelectedItem="{Binding ApplicationViewModel.ApplicationSettings.ActiveTheme, Source={x:Static local:ViewModelLocator.Instance}, Mode=TwoWay}" />
                        </StackPanel>

                        <!--  Item marker thickness  -->
                        <StackPanel Margin="0 0 0 10" Orientation="Vertical">
                            <TextBlock
                                Style="{DynamicResource SettingsDescriptionStyle}"
                                Text="Item marker thickness"
                                Margin="0 0 0 4" />
                            <ComboBox
                                FontSize="{StaticResource FontSizeSmall}"
                                FontFamily="{StaticResource Ubuntu}"
                                ItemsSource="{Binding ThicknessListProvider.Items, Source={x:Static local:ViewModelLocator.Instance}}"
                                SelectedItem="{Binding ApplicationViewModel.ApplicationSettings.ColorBarThickness, Source={x:Static local:ViewModelLocator.Instance}, Mode=TwoWay}" />
                        </StackPanel>

                        <!--  Task font size  -->
                        <StackPanel Margin="0 0 0 10" Orientation="Vertical">
                            <TextBlock
                                Style="{DynamicResource SettingsDescriptionStyle}"
                                Text="Task description font size"
                                Margin="0 0 0 4" />
                            <ComboBox
                                FontSize="{StaticResource FontSizeSmall}"
                                FontFamily="{StaticResource Ubuntu}"
                                ItemsSource="{Binding FontSizeListProvider.Items, Source={x:Static local:ViewModelLocator.Instance}}"
                                SelectedItem="{Binding ApplicationViewModel.ApplicationSettings.TaskFontSize, Source={x:Static local:ViewModelLocator.Instance}, Mode=TwoWay}" />
                        </StackPanel>

                        <!--  Task font family  -->
                        <StackPanel Margin="0 0 0 10" Orientation="Vertical">
                            <TextBlock
                                Style="{DynamicResource SettingsDescriptionStyle}"
                                Text="Font family"
                                Margin="0 0 0 4" />
                            <ComboBox
                                FontSize="{StaticResource FontSizeSmall}"
                                FontFamily="{StaticResource Ubuntu}"
                                ItemsSource="{Binding FontFamilyListProvider.Items, Source={x:Static local:ViewModelLocator.Instance}}"
                                SelectedItem="{Binding ApplicationViewModel.ApplicationSettings.FontFamily, Source={x:Static local:ViewModelLocator.Instance}, Mode=TwoWay}" />
                        </StackPanel>

                        <!--  Accent color  -->
                        <StackPanel Margin="0 0 0 10" Orientation="Vertical">
                            <TextBlock
                                Style="{DynamicResource SettingsDescriptionStyle}"
                                Text="Accent color"
                                Margin="0 0 0 4" />
                            <ComboBox
                                FontSize="{StaticResource FontSizeSmall}"
                                FontFamily="{StaticResource Ubuntu}"
                                ItemsSource="{Binding AccentColorProvider.Items, Source={x:Static local:ViewModelLocator.Instance}}"
                                SelectedItem="{Binding ApplicationViewModel.ApplicationSettings.AccentColor, Source={x:Static local:ViewModelLocator.Instance}, Mode=TwoWay}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border
                                            Width="200"
                                            Height="16"
                                            Background="{Binding Converter={local:StringRGBToBrushConverter}}"
                                            BorderBrush="Black"
                                            BorderThickness="1" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>

                        <!--  VERSION  -->
                        <StackPanel Margin="0 20 0 0" Orientation="Vertical">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="auto" />
                                </Grid.ColumnDefinitions>
                                <Border
                                    Grid.Column="1"
                                    Background="{DynamicResource VersionLabelBackgroundBrush}"
                                    CornerRadius="2">
                                    <TextBlock
                                        Margin="10 0 10 0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Foreground="{DynamicResource VersionLabelForegroundBrush}">
                                        Version 1.1.2
                                    </TextBlock>
                                </Border>
                            </Grid>
                        </StackPanel>


                    </StackPanel>
                </Border>
            </ScrollViewer>

        </Grid>
    </Border>
</local:BasePage>