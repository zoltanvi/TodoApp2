<local:BasePage
    x:Class="TodoApp2.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:core="clr-namespace:TodoApp2.Core;assembly=TodoApp2.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TodoApp2"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SettingsPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:TypeArguments="core:SettingsPageViewModel"
    mc:Ignorable="d">

    <Border>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Settings title  -->
            <Grid Grid.Row="0" Margin="0 5 0 15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    Margin="20 0 0 0"
                    Style="{DynamicResource CategoryTextBlockStyle}"
                    Text="Settings" />

                <Button
                    Grid.Column="2"
                    Command="{Binding BackToPrevPageCommand}"
                    Content="{DynamicResource SegoeIconBack}"
                    Style="{DynamicResource SettingsButtonStyle}" />

            </Grid>

            <Border
                Name="SettingsPanel"
                Grid.Row="1"
                Background="Transparent">

                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                        <RowDefinition Height="20" />
                    </Grid.RowDefinitions>

                    <Grid>
                        <Grid.RowDefinitions>
                            <!--  FIRST  -->
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="20" />

                            <!--  SECOND  -->
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="20" />

                            <!--  THIRD  -->
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="20" />

                            <!--  FOURTH  -->
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="20" />


                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <!--  FIRST ==========================================  -->
                        <ToggleButton
                            Name="AlwaysOnTopToggle"
                            Grid.Row="0"
                            Grid.Column="0"
                            IsChecked="{Binding ApplicationViewModel.ApplicationSettings.IsAlwaysOnTop, Source={x:Static local:ViewModelLocator.Instance}, Mode=TwoWay}"
                            Style="{DynamicResource CustomToggleStyle}" />

                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="2"
                            Style="{DynamicResource SettingsDescriptionStyle}"
                            Text="Always on top" />

                        <!--  SECOND ==========================================  -->
                        <ToggleButton
                            Name="QuickActionsToggle"
                            Grid.Row="2"
                            Grid.Column="0"
                            IsChecked="{Binding ApplicationViewModel.ApplicationSettings.IsQuickActionsEnabled, Source={x:Static local:ViewModelLocator.Instance}, Mode=TwoWay}"
                            Style="{DynamicResource CustomToggleStyle}" />

                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="2"
                            Style="{DynamicResource SettingsDescriptionStyle}"
                            Text="Quick actions on items" />

                        <!--  THIRD ==========================================  -->
                        <ToggleButton
                            Name="ItemBackgroundEnabledToggle"
                            Grid.Row="4"
                            Grid.Column="0"
                            IsChecked="{Binding ApplicationViewModel.ApplicationSettings.IsItemBackgroundVisible, Source={x:Static local:ViewModelLocator.Instance}, Mode=TwoWay}"
                            Style="{DynamicResource CustomToggleStyle}" />

                        <TextBlock
                            Grid.Row="4"
                            Grid.Column="2"
                            Style="{DynamicResource SettingsDescriptionStyle}"
                            Text="Item background visible" />


                        <!--  FOURTH ==========================================  -->
                        <ToggleButton
                            Name="ModificationDateVisibleToggle"
                            Grid.Row="6"
                            Grid.Column="0"
                            IsChecked="{Binding ApplicationViewModel.ApplicationSettings.IsModificationDateVisible, Source={x:Static local:ViewModelLocator.Instance}, Mode=TwoWay}"
                            Style="{DynamicResource CustomToggleStyle}" />

                        <TextBlock
                            Grid.Row="6"
                            Grid.Column="2"
                            Style="{DynamicResource SettingsDescriptionStyle}"
                            Text="Modification date on items" />
                    </Grid>

                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Grid.Row="0"
                            Style="{DynamicResource SettingsDescriptionStyle}"
                            Text="Theme" />

                        <ComboBox Grid.Row="1" Style="{DynamicResource ComboBoxStyle1}">
                            <ComboBox.Items>
                                <ComboBoxItem Content="Dark" />
                                <ComboBoxItem Content="Light" />
                                <ComboBoxItem Content="Beige" />
                                <ComboBoxItem Content="Dark2" />
                            </ComboBox.Items>
                        </ComboBox>

                    </Grid>


                    <!--  VERSION ==========================================  -->
                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <Border
                            Grid.Column="1"
                            Background="{DynamicResource VersionLabelBackgroundBrush}"
                            CornerRadius="4">
                            <TextBlock
                                Margin="10 0 10 0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="{DynamicResource VersionLabelForegroundBrush}">
                                Version 1.0.1
                            </TextBlock>
                        </Border>
                    </Grid>

                </Grid>



            </Border>

        </Grid>
    </Border>
</local:BasePage>