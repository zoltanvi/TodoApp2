<local:BasePage
    x:Class="TodoApp2.TaskPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:core="clr-namespace:TodoApp2.Core;assembly=TodoApp2.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TodoApp2"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="TaskPage"
    d:DesignHeight="480"
    d:DesignWidth="380"
    x:TypeArguments="core:TaskPageViewModel"
    mc:Ignorable="d">

    <Border Background="{DynamicResource ApplicationBackgroundBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Current category  -->
            <TextBlock
                Grid.Row="0"
                Margin="15 10 0 10"
                Style="{DynamicResource PageTitleTextBlockStyle}"
                Text="{Binding CategoryListService.CurrentCategory, Source={x:Static local:ViewModelLocator.Instance}}" />

            <local:TaskListControl x:Name="MyTaskListControl" Grid.Row="1" />

            <Border
                x:Name="BottomBorderPanel"
                Grid.Row="2"
                Background="{DynamicResource TaskPageBottomBarBackgroundBrush}"
                BorderBrush="{DynamicResource TaskPageBottomBarBorderBrush}"
                BorderThickness="0 1 0 0">
                <Border.CornerRadius>
                    <MultiBinding Converter="{local:CornerRadiusConverter}" UpdateSourceTrigger="PropertyChanged">
                        <Binding Path="ApplicationViewModel.ApplicationSettings.NoRadius" Source="{x:Static local:ViewModelLocator.Instance}" />
                        <Binding Path="ApplicationViewModel.ApplicationSettings.NoRadius" Source="{x:Static local:ViewModelLocator.Instance}" />
                        <Binding Path="ApplicationViewModel.ApplicationSettings.WindowCornerRadius" Source="{x:Static local:ViewModelLocator.Instance}" />
                        <Binding Path="ApplicationViewModel.ApplicationSettings.WindowCornerRadius" Source="{x:Static local:ViewModelLocator.Instance}" />
                    </MultiBinding>
                </Border.CornerRadius>
                <TextBox
                    x:Name="AddNewTaskTextBox"
                    Grid.Column="1"
                    MinWidth="240"
                    MaxHeight="162"
                    Margin="0 0 1 0"
                    Padding="10 10 0 10"
                    VerticalAlignment="Bottom"
                    AcceptsReturn="True"
                    AcceptsTab="True"
                    AutomationProperties.AutomationId="AddNewTaskTextBox"
                    PreviewKeyDown="AddNewTaskTextBox_OnPreviewKeyDown"
                    ScrollViewer.CanContentScroll="False"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    Style="{DynamicResource AddNewTaskTextBoxStyle}"
                    Tag="Add new task"
                    Text="{Binding PendingAddNewTaskText, UpdateSourceTrigger=PropertyChanged}" />
            </Border>
        </Grid>
    </Border>
</local:BasePage>