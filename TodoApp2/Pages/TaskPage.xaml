<local:BasePage x:TypeArguments="core:TaskListViewModel" x:Class="TodoApp2.Pages.TaskPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TodoApp2"
      xmlns:viewModel="clr-namespace:TodoApp2.Core"
      xmlns:core="clr-namespace:TodoApp2.Core;assembly=TodoApp2.Core"
      mc:Ignorable="d" 
      d:DesignHeight="480" d:DesignWidth="380"
      Title="TaskPage">

    <Border Background="{StaticResource ApplicationBackgroundBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="0"/>
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Text="{Binding ApplicationViewModel.CurrentCategory, Source={x:Static local:ViewModelLocator.Instance}}"
                Style="{StaticResource CategoryTextBlockStyle}"
            />


            <local:TaskListControl Grid.Row="1" Margin="0 5 0 60" x:Name="MyTaskListControl"  />

            <Border
                Grid.Row="2"
                Background="{StaticResource ApplicationBackgroundBrush}"
                Height="60"
                Margin="0 -60 0 0">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label 
                        Grid.Column="0"
                        Content="{StaticResource SegoeIconAdd}" 
                        Style="{StaticResource IconLabelStyle}"
                        Margin="20 0 0 0"
                        VerticalAlignment="Center"
                        />
                    <TextBox
                        x:Name="AddNewTaskTextBox"
                        Tag="Add new task"
                        Text="{Binding PendingAddNewTaskText, UpdateSourceTrigger=PropertyChanged}"
                        Grid.Column="1"
                        Style="{StaticResource AddNewTaskTextBoxStyle}"
                        VerticalAlignment="Center"
                        Margin="10 0 10 0"
                        MinWidth="240"
                        AcceptsTab="True"
                        AcceptsReturn="True"
                        PreviewKeyDown="AddNewTaskTextBox_OnPreviewKeyDown"
                        />

                </Grid>

            </Border>


        </Grid>
    </Border>
</local:BasePage>
