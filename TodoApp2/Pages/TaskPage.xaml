<local:BasePage x:TypeArguments="core:TaskPageViewModel" x:Class="TodoApp2.TaskPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:TodoApp2"
      xmlns:core="clr-namespace:TodoApp2.Core;assembly=TodoApp2.Core"
      mc:Ignorable="d"
      d:DesignHeight="480" d:DesignWidth="380"
      Title="TaskPage">

    <Border Background="{DynamicResource ApplicationBackgroundBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Text="{Binding ApplicationViewModel.CurrentCategory, Source={x:Static local:ViewModelLocator.Instance}}"
                Style="{DynamicResource CategoryTextBlockStyle}" />

            <local:TaskListControl Grid.Row="1" x:Name="MyTaskListControl" />

            
            
            <Border
                x:Name="BottomBorderPanel"
                Grid.Row="2"
                Background="{DynamicResource TaskPageTextBoxBackgroundBrush}"
                >

                <TextBox
                    AutomationProperties.AutomationId="AddNewTaskTextBox"
                    x:Name="AddNewTaskTextBox"
                    Tag="Add new task"
                    Text="{Binding PendingAddNewTaskText, UpdateSourceTrigger=PropertyChanged}"
                    Grid.Column="1"
                    Style="{DynamicResource AddNewTaskTextBoxStyle}"
                    VerticalAlignment="Bottom"
                    Margin="0 0 1 0"
                    Padding="10 10 0 10"
                    MinWidth="240"
                    MaxHeight="162"
                    AcceptsTab="True"
                    AcceptsReturn="True"
                    PreviewKeyDown="AddNewTaskTextBox_OnPreviewKeyDown"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    ScrollViewer.CanContentScroll="False" 
                    />

                
            </Border>
        </Grid>
    </Border>
</local:BasePage>