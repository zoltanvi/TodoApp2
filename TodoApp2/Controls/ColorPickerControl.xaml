<UserControl x:Class="TodoApp2.ColorPickerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TodoApp2"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <Border Background="{StaticResource NavigatorBackgroundBrush}"
                Width="180" 
                Height="34"
                CornerRadius="4"
                Padding="6 4 6 4"
        >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Style="{StaticResource ColorPickerButtonStyle}" Background="#EA1E63" Command="{Binding SetColorCommand}" CommandParameter="#EA1E63"/>
                <Button Grid.Column="1" Style="{StaticResource ColorPickerButtonStyle}" Background="#A970FF" Command="{Binding SetColorCommand}" CommandParameter="#A970FF"/>
                <Button Grid.Column="2" Style="{StaticResource ColorPickerButtonStyle}" Background="#2196F3" Command="{Binding SetColorCommand}" CommandParameter="#2196F3"/>
                <Button Grid.Column="3" Style="{StaticResource ColorPickerButtonStyle}" Background="#8BC24A" Command="{Binding SetColorCommand}" CommandParameter="#8BC24A"/>
                <Button Grid.Column="4" Style="{StaticResource ColorPickerButtonStyle}" Background="#FFEB3C" Command="{Binding SetColorCommand}" CommandParameter="#FFEB3C"/>
                <Button Grid.Column="5" Style="{StaticResource ColorPickerButtonStyle}" Background="#FF9A14" Command="{Binding SetColorCommand}" CommandParameter="#FF9A14"/>

            </Grid>
        </Border>

    </Grid>
</UserControl>
