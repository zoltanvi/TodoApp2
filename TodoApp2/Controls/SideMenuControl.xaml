<UserControl
    x:Class="TodoApp2.SideMenuControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:attached="clr-namespace:Modules.Common.Views.AttachedProperties;assembly=Modules.Common.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TodoApp2"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    AutomationProperties.AutomationId="SideMenu"
    mc:Ignorable="d">

    <UserControl.Template>
        <ControlTemplate TargetType="UserControl">
            <Border
                x:Name="NavigatorContentBorder"
                Margin="5 5 0 5"
                HorizontalAlignment="Stretch"
                ClipToBounds="True"
                CornerRadius="6">

                <Frame
                    x:Name="SideMenuFrameElement"
                    attached:NoFrameHistory.Value="True"/>

            </Border>

        </ControlTemplate>
    </UserControl.Template>
</UserControl>