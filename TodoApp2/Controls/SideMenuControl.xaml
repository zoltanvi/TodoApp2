<UserControl
    x:Class="TodoApp2.SideMenuControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TodoApp2"
    mc:Ignorable="d"
    AutomationProperties.AutomationId="SideMenu"
    d:DesignHeight="450"
    d:DesignWidth="800">

    <UserControl.Template>
        <ControlTemplate TargetType="UserControl">

            <Border
                x:Name="NavigatorContentBorder"
                Background="{DynamicResource SideMenuBgBrush}"
                BorderThickness="0 0 1 0"
                BorderBrush="{DynamicResource CommonBorderBrush}"
                ClipToBounds="True"
                Width="{Binding UIScaler.SideMenuWidth, Source={x:Static local:ViewModelLocator.Instance}}"
                HorizontalAlignment="Left">

                <ContentPresenter />

            </Border>
        </ControlTemplate>
    </UserControl.Template>
</UserControl>