<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2">

    <Style x:Key="SettingsDockPanelStyle" TargetType="{x:Type DockPanel}">
        <Setter Property="Margin" Value="0 0 0 0" />
    </Style>

    <Style x:Key="SettingsItemStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Background" Value="{DynamicResource SettingsItemBgBrush}" />
        <Setter Property="Margin" Value="0 0 0 5" />
        <Setter Property="Padding" Value="5" />
    </Style>

    <Style x:Key="BottomPanelStyle" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource TaskPageBottomBarBackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BottomBarBorderBrush}" />
        <Setter Property="BorderThickness" Value="0 1 0 0" />
    </Style>

</ResourceDictionary>