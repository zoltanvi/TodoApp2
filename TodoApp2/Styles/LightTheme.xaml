        <GradientStop Color="{DynamicResource TaskItemBackground}" Offset="1" />
    </LinearGradientBrush>

    <VisualBrush x:Key="HatchBrush" TileMode="Tile"
                 Viewport="0,0,8,8" ViewportUnits="Absolute"
                 Viewbox="0,0,8,8" ViewboxUnits="Absolute">
        <VisualBrush.Visual>
            <Path Data="M 0 8 L 8 0"
                  Stroke="{DynamicResource TaskItemHatchedHatchBrush}" StrokeEndLineCap="Square"
                  RenderOptions.EdgeMode="Aliased" />
        </VisualBrush.Visual>
