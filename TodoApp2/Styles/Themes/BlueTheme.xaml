<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:TodoApp2"
                    x:Name="LightThemeResourceDictionary">

    <!--  BRUSHES (cannot be in a separate xaml because the theme switch would not work)  -->

    <Color x:Key="ThemeLighterColor">#E2F1FF</Color>
    <Color x:Key="ThemeDarkerColor">#CDE9FF</Color>
    <Color x:Key="ThemeSpecialColor">#ffffff</Color>

    <SolidColorBrush x:Key="ApplicationBorderBrush" Color="#8000BFFF" />

    <SolidColorBrush x:Key="TitleBarForegroundBrush" Color="Black" />
    <SolidColorBrush x:Key="TitleBarBackgroundBrush" Color="{DynamicResource ThemeDarkerColor}" />

    <Color x:Key="ButtonHoverBackground">#28000000</Color>
    <Color x:Key="ButtonHoverBackgroundLight">#1A000000</Color>

    <SolidColorBrush x:Key="ButtonHoverBackgroundBrush" Color="{DynamicResource ButtonHoverBackground}" />
    <SolidColorBrush x:Key="ButtonTitleBarCloseHoverBackgroundBrush" Color="#FF311E" />

    <SolidColorBrush x:Key="SideMenuForegroundBrush" Color="Black" />
    <SolidColorBrush x:Key="SideMenuBackgroundSolidBrush" Color="{DynamicResource ThemeDarkerColor}" />

    <SolidColorBrush x:Key="SideMenuBackgroundBrush" Color="{DynamicResource ThemeSpecialColor}" />

    <SolidColorBrush x:Key="SideMenuBottomBarForegroundBrush" Color="Black" />
    <SolidColorBrush x:Key="SideMenuBottomBarBackgroundBrush" Color="{DynamicResource ThemeDarkerColor}" />
    <SolidColorBrush x:Key="SideMenuButtonHoverBackgroundBrush" Color="{DynamicResource ButtonHoverBackground}" />

    <SolidColorBrush x:Key="ButtonDeleteHoverBrush" Color="#E55F3E" />

    <SolidColorBrush x:Key="CategorySelectedForegroundBrush" Color="Black" />
    <SolidColorBrush x:Key="CategorySelectedBackgroundBrush" Color="{DynamicResource ButtonHoverBackground}" />
    <SolidColorBrush x:Key="CategoryHoverBackgroundBrush" Color="{DynamicResource ButtonHoverBackgroundLight}" />

    <SolidColorBrush x:Key="PageTitleForegroundBrush" Color="Black" />

    <SolidColorBrush x:Key="TaskPageForegroundDarkBrush" Color="Black" />
    <SolidColorBrush x:Key="TaskPageForegroundLightBrush" Color="#FFFFFF" />

    <SolidColorBrush x:Key="TaskPageBackgroundBrush" Color="{DynamicResource ThemeLighterColor}" />

    <!--<SolidColorBrush x:Key="TaskPageForegroundBrush" Color="{Binding ApplicationViewModel.ApplicationSettings.AccentColor, Source={x:Static local:ViewModelLocator.Instance}, Converter={local:DynamicBrushConverterTaskItem}}" />-->
    <SolidColorBrush x:Key="TaskPageForegroundBrush" Color="Black" />
    <SolidColorBrush x:Key="TaskPageEditModeForegroundBrush" Color="#005395" />
    <SolidColorBrush x:Key="TaskPageTimestampForegroundBrush" Color="{Binding Color, Source={StaticResource TaskPageForegroundBrush}}" Opacity="0.7" />
    <SolidColorBrush x:Key="TaskPageBottomBarBackgroundBrush" Color="{DynamicResource ThemeDarkerColor}" />
    <SolidColorBrush x:Key="TaskPageBottomBarForegroundBrush" Color="Black" />
    <SolidColorBrush x:Key="TaskPageBottomBarBorderBrush" Color="Transparent" />

    <Color x:Key="TaskItemBackgroundTransparent">#00CDE9FF</Color>
    <Color x:Key="TaskItemBackground">#CDE9FF</Color>

    <SolidColorBrush x:Key="TaskItemBackgroundBrush" Color="{DynamicResource ThemeDarkerColor}" />

    <SolidColorBrush x:Key="TaskItemHatchedHatchBrush" Color="#F1F0E5" />
    <SolidColorBrush x:Key="TaskItemButtonForegroundBrush" Color="#1E1D1D" />
    <SolidColorBrush x:Key="TaskItemButtonTrashHoverBrush" Color="#FA504D" />
    <SolidColorBrush x:Key="TaskItemBorderBrush" Color="Transparent" />

    <SolidColorBrush x:Key="TextEditorButtonCheckedBackgroundBrush" Color="#B9B9B9" />
    <SolidColorBrush x:Key="TextEditorButtonHoverBackgroundBrush" Color="{DynamicResource ButtonHoverBackgroundLight}" />
    <SolidColorBrush x:Key="TextEditorButtonPressedBackgroundBrush" Color="#949494" />

    <SolidColorBrush x:Key="InnerWindowForegroundBrush" Color="Black" />
    <SolidColorBrush x:Key="TextBoxCaretBrush" Color="Black" />
    <SolidColorBrush x:Key="TextBoxPlaceholderBrush" Color="#545454" />

    <SolidColorBrush x:Key="OverlayBackgroundBrush" Color="#80FFFFFF" />

    <SolidColorBrush x:Key="CheckBoxBorderBrush" Color="Black" />
    <SolidColorBrush x:Key="CheckBoxCheckBrush" Color="Black" />
    <SolidColorBrush x:Key="CheckBoxHoverBackgroundBrush" Color="{DynamicResource ThemeSpecialColor}" />

    <SolidColorBrush x:Key="ScrollbarStaticBrush" Color="#8081D4FA" />
    <SolidColorBrush x:Key="ScrollbarMouseOverBrush" Color="#8081D4FA" />
    <SolidColorBrush x:Key="ScrollbarPressedBrush" Color="#03A9F4" />

    <SolidColorBrush x:Key="NotePageNumberForeground" Color="{Binding Color, Source={StaticResource TaskPageForegroundBrush}}" />

    
    <SolidColorBrush x:Key="ColorPickerBackgroundBrush" Color="#E1E1E1" />
    <SolidColorBrush x:Key="OverlayPageBackgroundBrush" Color="{DynamicResource ThemeLighterColor}" />
    <SolidColorBrush x:Key="ReminderItemBackgroundBrush" Color="{DynamicResource ThemeDarkerColor}" />
    <SolidColorBrush x:Key="NotificationBorderBrush" Color="#5C5C5C" />
    <SolidColorBrush x:Key="ReminderDateBorderBrush" Color="#828282" />
    <SolidColorBrush x:Key="ReminderDateInvalidBorderBrush" Color="#FF3100" />
    <SolidColorBrush x:Key="SettingsButtonHoverForegroundBrush" Color="#0A7CFF" />

    <SolidColorBrush x:Key="ToggleButtonBorderBrush" Color="Black" />
    <SolidColorBrush x:Key="ToggleButtonBackgroundCheckedBrush" Color="#0A7CFF" />
    <SolidColorBrush x:Key="ToggleButtonGlyphBrush" Color="Black" />
    <SolidColorBrush x:Key="ToggleButtonGlyphCheckedBrush" Color="#FFFFFF" />

    <SolidColorBrush x:Key="TimePickerButtonBackgroundBrush" Color="{DynamicResource ThemeDarkerColor}" />
    <SolidColorBrush x:Key="TimePickerButtonBackgroundHoveredBrush" Color="{DynamicResource ButtonHoverBackgroundLight}" />
    <SolidColorBrush x:Key="TimePickerForegroundBrush" Color="Black" />
    <SolidColorBrush x:Key="DatePickerForegroundBrush" Color="Black" />

    <Color x:Key="CalendarDayTitleForeground">#DA0050</Color>
    <Color x:Key="CalendarBackground">Transparent</Color>
    <Color x:Key="CalendarNormalDayForeground">Black</Color>
    <Color x:Key="CalendarDisabledDayForeground">#FFADADAD</Color>
    <Color x:Key="CalendarPrevNextButton">Black</Color>
    <Color x:Key="CalendarPrevNextButtonHovered">#DA0050</Color>
    <Color x:Key="CalendarPrevNextButtonBackground">#CDE9FF</Color>
   
    <Color x:Key="CalendarDate">Black</Color>
    <Color x:Key="CalendarDateHovered">#DA0050</Color>
    <Color x:Key="CalendarSelectedDayForeground">Black</Color>
    <Color x:Key="CalendarSelectedDayBackground">#FF838383</Color>
    <Color x:Key="CalendarItemMouseOverBackground">#979797</Color>
    <SolidColorBrush x:Key="CalendarDayTitleForegroundBrush" Color="{DynamicResource CalendarDayTitleForeground}" />
    <SolidColorBrush x:Key="CalendarBackgroundBrush" Color="{DynamicResource CalendarBackground}" />
    <SolidColorBrush x:Key="CalendarNormalDayForegroundBrush" Color="{DynamicResource CalendarNormalDayForeground}" />
    <SolidColorBrush x:Key="CalendarDisabledDayForegroundBrush" Color="{DynamicResource CalendarDisabledDayForeground}" />
    <SolidColorBrush x:Key="CalendarPrevNextButtonBrush" Color="{DynamicResource CalendarPrevNextButton}" />
    <SolidColorBrush x:Key="CalendarPrevNextButtonHoveredBrush" Color="{DynamicResource CalendarPrevNextButtonHovered}" />
    <SolidColorBrush x:Key="CalendarPrevNextButtonBackgroundBrush" Color="{DynamicResource CalendarPrevNextButtonBackground}" />
    <SolidColorBrush x:Key="CalendarDateBrush" Color="{DynamicResource CalendarDate}" />
    <SolidColorBrush x:Key="CalendarDateHoveredBrush" Color="{DynamicResource CalendarDateHovered}" />
    <SolidColorBrush x:Key="CalendarSelectedDayForegroundBrush" Color="{DynamicResource CalendarSelectedDayForeground}" />
    <SolidColorBrush x:Key="CalendarSelectedDayBackgroundBrush" Color="{DynamicResource CalendarSelectedDayBackground}" />
    <SolidColorBrush x:Key="CalendarItemMouseOverBackgroundBrush" Color="{DynamicResource CalendarItemMouseOverBackground}" />
    <SolidColorBrush x:Key="NotificationButtonForegroundBrush" Color="Black" />
    <SolidColorBrush x:Key="NotificationButtonHoverForegroundBrush" Color="#0A7CFF" />
    <SolidColorBrush x:Key="SettingsDescriptionBrush" Color="Black" />
    <SolidColorBrush x:Key="ContextMenuBackgroundBrush" Color="#EEEEEE" />
    <SolidColorBrush x:Key="ContextMenuItemBackgroundBrush" Color="#EEEEEE" />
    <SolidColorBrush x:Key="ContextMenuItemForegroundBrush" Color="Black" />
    <SolidColorBrush x:Key="ContextMenuBorderBrush" Color="#DEDEDE" />
    <SolidColorBrush x:Key="ContextMenuSeparatorBrush" Color="#BDBDBD" />
    <SolidColorBrush x:Key="ContextMenuArrowBrush" Color="Black" />
    <SolidColorBrush x:Key="ContextMenuSelectedBackgroundBrush" Color="#A2A2A2" />
    <SolidColorBrush x:Key="RadioButton.Static.Background" Color="#FFFFFFFF" />
    <SolidColorBrush x:Key="RadioButton.Static.Border" Color="Black" />
    <SolidColorBrush x:Key="RadioButton.Static.Glyph" Color="Black" />
    <SolidColorBrush x:Key="RadioButton.MouseOver.Background" Color="#FFFFFFFF" />
    <SolidColorBrush x:Key="RadioButton.MouseOver.Border" Color="#FF000000" />
    <SolidColorBrush x:Key="RadioButton.MouseOver.Glyph" Color="#FF000000" />
    <SolidColorBrush x:Key="RadioButton.MouseOver.On.Background" Color="#FF4C91C8" />
    <SolidColorBrush x:Key="RadioButton.MouseOver.On.Border" Color="#FF4C91C8" />
    <SolidColorBrush x:Key="RadioButton.MouseOver.On.Glyph" Color="Black" />
    <SolidColorBrush x:Key="RadioButton.Disabled.Background" Color="#FFFFFFFF" />
    <SolidColorBrush x:Key="RadioButton.Disabled.Border" Color="#FF999999" />
    <SolidColorBrush x:Key="RadioButton.Disabled.Glyph" Color="#FF999999" />
    <SolidColorBrush x:Key="RadioButton.Disabled.On.Background" Color="#FFCCCCCC" />
    <SolidColorBrush x:Key="RadioButton.Disabled.On.Border" Color="#FFCCCCCC" />
    <SolidColorBrush x:Key="RadioButton.Disabled.On.Glyph" Color="#FFA3A3A3" />
    <SolidColorBrush x:Key="RadioButton.Pressed.Background" Color="#FF999999" />
    <SolidColorBrush x:Key="RadioButton.Pressed.Border" Color="#FF999999" />
    <SolidColorBrush x:Key="RadioButton.Pressed.Glyph" Color="#FFFFFFFF" />
    <SolidColorBrush x:Key="RadioButton.Checked.Background" Color="#FF0063B1" />
    <SolidColorBrush x:Key="RadioButton.Checked.Border" Color="#FF0063B1" />
    <SolidColorBrush x:Key="RadioButton.Checked.Glyph" Color="#FFFFFFFF" />
    <SolidColorBrush x:Key="ButtonBaseForegroundBrush" Color="Black" />
    <SolidColorBrush x:Key="VersionLabelBackgroundBrush" Color="{DynamicResource ThemeDarkerColor}" />
    <SolidColorBrush x:Key="VersionLabelForegroundBrush" Color="Black" />

    <SolidColorBrush x:Key="ComboBoxBorderBrush" Color="Black" />
    <SolidColorBrush x:Key="ComboBoxBackgroundBrush" Color="{DynamicResource ThemeSpecialColor}" />
    <SolidColorBrush x:Key="ComboBoxButtonBrush" Color="{DynamicResource ThemeLighterColor}" />
    <SolidColorBrush x:Key="ComboBoxButtonMouseOverBrush" Color="{DynamicResource ThemeLighterColor}" />
    <SolidColorBrush x:Key="ComboBoxButtonCheckedBrush" Color="#A8A8A8" />
    <SolidColorBrush x:Key="ComboBoxArrowBrush" Color="Black" />
    <SolidColorBrush x:Key="ComboBoxSelectedItemForegroundBrush" Color="Black" />
    <SolidColorBrush x:Key="ComboBoxDropDownBackgroundBrush" Color="#f5f5f5" />
    <SolidColorBrush x:Key="ComboBoxDropDownForegroundBrush" Color="Black" />
    <SolidColorBrush x:Key="ComboBoxDropDownMouseOverBrush" Color="#E6E6E6" />

    <LinearGradientBrush x:Key="TaskListItemHoverPanelBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Offset="0" Color="{DynamicResource TaskItemBackgroundTransparent}" />
        <GradientStop Offset="0.1" Color="{DynamicResource TaskItemBackground}" />
        <GradientStop Offset="1" Color="{DynamicResource TaskItemBackground}" />
    </LinearGradientBrush>

    <VisualBrush x:Key="HatchBrush"
                 TileMode="Tile"
                 Viewbox="0,0,8,8"
                 ViewboxUnits="Absolute"
                 Viewport="0,0,8,8"
                 ViewportUnits="Absolute">
        <VisualBrush.Visual>
            <Path Data="M 0 8 L 8 0"
                  RenderOptions.EdgeMode="Aliased"
                  Stroke="{DynamicResource TaskItemHatchedHatchBrush}"
                  StrokeEndLineCap="Square" />
        </VisualBrush.Visual>
    </VisualBrush>

    <VisualBrush x:Key="StripeBrush"
                 TileMode="None"
                 Viewbox="0 0 18 18"
                 ViewboxUnits="Absolute"
                 Viewport="0 0 18 18"
                 ViewportUnits="Absolute">
        <VisualBrush.Visual>
            <Path Data="M 3 -6 L 24 14"
                  RenderOptions.EdgeMode="Aliased"
                  Stroke="{Binding ApplicationViewModel.ApplicationSettings.AccentColor, Source={x:Static local:ViewModelLocator.Instance}, Converter={StaticResource stringRGBToBrushConverter}}"
                  StrokeThickness="5"
                  StrokeEndLineCap="Flat" />
        </VisualBrush.Visual>
    </VisualBrush>

    <Style x:Key="BottomPanelStyle" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource TaskPageBottomBarBackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource TaskPageBottomBarBorderBrush}" />
        <Setter Property="BorderThickness" Value="0 1 0 0" />
    </Style>

</ResourceDictionary>
