    <SolidColorBrush x:Key="ContextMenuSeparatorBrush" Color="#908979" />
    <SolidColorBrush x:Key="ContextMenuArrowBrush" Color="#454138" />
    <SolidColorBrush x:Key="ContextMenuSelectedBackgroundBrush" Color="#9B9380" />
