    <SolidColorBrush x:Key="SideMenuBottomBarForegroundBrush" Color="#A9A591" />
    <SolidColorBrush x:Key="SideMenuBottomBarBackgroundBrush" Color="#292929" />
    <SolidColorBrush x:Key="SideMenuButtonHoverBackgroundBrush" Color="#3A3837" />

    <SolidColorBrush x:Key="ButtonDeleteHoverBrush" Color="#E55F3E" />

    <SolidColorBrush x:Key="CategorySelectedForegroundBrush" Color="#DCD8C0" />
