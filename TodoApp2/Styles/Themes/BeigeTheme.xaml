    <SolidColorBrush x:Key="TimePickerForegroundBrush" Color="White" />
    <SolidColorBrush x:Key="DatePickerForegroundBrush" Color="White" />


    <Color x:Key="CalendarDayTitleForeground">#1BFFEA</Color>
    <Color x:Key="CalendarBackground">Transparent</Color>
    <Color x:Key="CalendarNormalDayForeground">White</Color>
    <Color x:Key="CalendarDisabledDayForeground">#FF4E4E4E</Color>
    <Color x:Key="CalendarPrevNextButton">White</Color>
    <Color x:Key="CalendarPrevNextButtonHovered">#CD664D</Color>
    <Color x:Key="CalendarPrevNextButtonBackground">#3f4040</Color>
