<Window x:Class="TodoApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TodoApp2"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        x:Name="AppWindow"
        WindowStartupLocation="CenterScreen"
        MinWidth="{Binding WindowMinimumWidth}"
        MinHeight="{Binding WindowMinimumHeight}"
        Title="TodoApp" Height="500" Width="380">

    <Window.Resources>
        <Style TargetType="{x:Type local:MainWindow}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Window}">
                        <!--Outer border with the dropshadow margin-->
                        <Border Padding="{Binding OuterMarginThickness}" >

                            <!--Main window outline-->
                            <Grid >

                                <!--Window border and dropshadow-->
                                <Border CornerRadius="{Binding WindowCornerRadius}"
                                        Background="{StaticResource ContentBackgroundBrush}">
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="0" Opacity="0.2"></DropShadowEffect>
                                    </Border.Effect>

                                    <Grid>
                                        <Grid.RowDefinitions>

                                            <!--Title Bar-->
                                            <RowDefinition Height="{Binding TitleBarGridHeight, FallbackValue=35}"/>
                                            <!--Window Content-->
                                            <RowDefinition Height="*"/>

                                        </Grid.RowDefinitions>

                                        <!--Title Bar-->
                                        <Grid Grid.Column="0" Panel.ZIndex="1" 
                                              Background="{StaticResource TitleBarBackgroundBrush}">
                                            <Grid.ColumnDefinitions>

                                                <!--Navigator button column-->
                                                <ColumnDefinition Width="Auto" />
                                                <!--Maybe title-->
                                                <ColumnDefinition Width="*" />
                                                <!--Windows Button-->
                                                <ColumnDefinition Width="Auto" />

                                            </Grid.ColumnDefinitions>

                                            <!--Navigator button-->
                                            <Button Grid.Column="0"
                                                    Style="{StaticResource TitleBarButtonStyle}"
                                                    Content="{StaticResource SegoeIconMenu}"
                                            />
                                            <!--Here could be the window title-->

                                            <!--Window buttons-->
                                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                                <Button Command="{Binding MinimizeCommand}"
                                                    Style="{StaticResource WindowButtonStyle}"
                                                    Content="{StaticResource SegoeIconMinimizeWindow}"/>
                                                <Button Command="{Binding MaximizeCommand}"
                                                        Style="{StaticResource WindowButtonStyle}"
                                                        Content="{StaticResource SegoeIconMaximizeWindow}"/>
                                                <Button Command="{Binding CloseCommand}"
                                                        Style="{StaticResource WindowButtonStyle}"
                                                        Content="{StaticResource SegoeIconCloseWindow}"/>
                                            </StackPanel>

                                        </Grid>

                                        <!--Page content-->
                                        <Border Grid.Row="1" Padding="{Binding InnerContentPadding}">
                                            <ContentPresenter Content="{TemplateBinding Content}"/>
                                        </Border>

                                        <!--Navigator content overlay (the darker background)-->
                                        <Border Grid.Row="1" 
                                                x:Name="NavigatorContentOverlayPanel"
                                                Visibility="Hidden"
                                                Background="{StaticResource NavigatorContentOverlayBrush}" />

                                        <!--Navigator menu-->
                                        <!--<Border Grid.Row="1" 
                                                x:Name="NavigatorContentBorder"
                                                Background="{StaticResource NavigatorBackgroundBrush}" 
                                                Width="300" 
                                                HorizontalAlignment="Left"
                                                >

                                        </Border>-->

                                    </Grid>

                                </Border>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>


    <WindowChrome.WindowChrome>
        <WindowChrome 
            ResizeBorderThickness="{Binding ResizeBorderThickness}"
            CaptionHeight="{Binding TitleBarHeight}"
            CornerRadius="0"
            GlassFrameThickness="0"
            />
    </WindowChrome.WindowChrome>


    <Border Background="{StaticResource ApplicationBackgroundBrush}" >
        <Frame x:Name="MainFrame" Content="{Binding CurrentPage, Converter={local:ApplicationPageValueConverter}}"></Frame>
    </Border>

</Window>
