<Window x:Class="TodoApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TodoApp2"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        AutomationProperties.AutomationId="TodoApp2Window"
        Name="TodoApp2Window"
        WindowStartupLocation="CenterScreen"
        MinWidth="{Binding WindowMinimumWidth}"
        MinHeight="{Binding WindowMinimumHeight}"
        Title="TodoApp" Height="500" Width="380">

    <Window.Resources>
        <Style TargetType="{x:Type local:MainWindow}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Window}">
                        <!--Outer border with the drop shadow margin-->
                        <Border Margin="{Binding OuterMarginThickness}">

                            <!--Main window outline-->
                            <Grid>

                                <!-- Outer dragging border -->
                                <Border BorderThickness="2"
                                        Panel.ZIndex="2"
                                        CornerRadius="{Binding WindowCornerRadius}"
                                        BorderBrush="Transparent" />

                                <Border BorderThickness="0.4"
                                        Panel.ZIndex="2"
                                        CornerRadius="{Binding WindowCornerRadius}"
                                        BorderBrush="{DynamicResource ApplicationBorderBrush}" />

                                <!--Window border and drop shadow-->
                                <Border CornerRadius="{Binding WindowCornerRadius}"
                                        Background="{DynamicResource ContentBackgroundBrush}">
                                    <!--<Border.Effect>
                                        <DropShadowEffect ShadowDepth="0" Opacity="0.2"></DropShadowEffect>
                                    </Border.Effect>-->

                                    <Grid>
                                        <Grid.RowDefinitions>

                                            <!--Title Bar-->
                                            <RowDefinition Height="{Binding TitleBarGridHeight, FallbackValue=35}" />
                                            <!--Window Content-->
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <!--Title Bar-->
                                        <Grid Grid.Column="0" Panel.ZIndex="1"
                                              Background="{DynamicResource TitleBarBackgroundBrush}">
                                            <Grid.ColumnDefinitions>

                                                <!--Side menu button column-->
                                                <ColumnDefinition Width="Auto" />
                                                <!--Maybe title-->
                                                <ColumnDefinition Width="*" />
                                                <!--Windows Button-->
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <!-- Side menu button-->
                                            <Button
                                                AutomationProperties.AutomationId="SideMenuButton"
                                                Name="SideMenuButton"
                                                Grid.Column="0"
                                                Style="{DynamicResource TitleBarButtonStyle}"
                                                Content="{DynamicResource SegoeIconMenu}"
                                                Command="{Binding ApplicationViewModel.ToggleSideMenuCommand,
                                                             Source={x:Static local:ViewModelLocator.Instance}}" />

                                            <Grid Grid.Column="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <!--Theme button-->
                                                <Button Grid.Column="0"
                                                    Name="ThemeButton"
                                                    Command="{Binding ChangeThemeCommand}"
                                                    Style="{DynamicResource WindowButtonStyle}"
                                                    Content="{DynamicResource SegoeIconChangeTheme}" />

                                                <!--Here could be the window title-->
                                            </Grid>

                                            <!--Window buttons-->
                                            <StackPanel
                                                Grid.Column="2" Orientation="Horizontal">
                                                <Button
                                                    AutomationProperties.AutomationId="MinimizeWindow"
                                                    x:Name="MinimizeWindow"
                                                    Command="{Binding MinimizeCommand}"
                                                    Style="{DynamicResource WindowButtonStyle}"
                                                    Content="{DynamicResource SegoeIconMinimizeWindow}" />
                                                <Button
                                                    AutomationProperties.AutomationId="MaximizeWindow"
                                                    x:Name="MaximizeWindow"
                                                    Command="{Binding MaximizeCommand}"
                                                    Style="{DynamicResource WindowButtonStyle}"
                                                    Content="{DynamicResource SegoeIconMaximizeWindow}" />
                                                <Button
                                                    AutomationProperties.AutomationId="CloseWindow"
                                                    Name="CloseWindow"
                                                    Command="{Binding CloseCommand}"
                                                    Style="{DynamicResource WindowCloseButtonStyle}"
                                                    Content="{DynamicResource SegoeIconCloseWindow}" />
                                            </StackPanel>
                                        </Grid>

                                        <!--Page content-->
                                        <Border Grid.Row="1" Padding="{Binding InnerContentPadding}">
                                            <ContentPresenter
                                                AutomationProperties.AutomationId="MainPageContent"
                                                Content="{TemplateBinding Content}" />
                                        </Border>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <WindowChrome.WindowChrome>
        <WindowChrome
            ResizeBorderThickness="{Binding ResizeBorderThickness}"
            CaptionHeight="{Binding TitleBarHeight}"
            CornerRadius="0"
            GlassFrameThickness="0" />
    </WindowChrome.WindowChrome>

    <Border Background="{DynamicResource ApplicationBackgroundBrush}">
        <Grid>

            <!-- Current page -->
            <Frame
                AutomationProperties.AutomationId="CurrentPage"
                local:NoFrameHistory.Value="True"
                DataContext="{Binding ApplicationViewModel.CurrentPage,
                             Source={x:Static local:ViewModelLocator.Instance},
                             Converter={local:ApplicationPageValueConverter}}"
                Content="{Binding}" />

            <!-- Overlay background -->
            <local:OverlayBackgroundControl
                AutomationProperties.AutomationId="OverlayBackgroundControl" />

            <!--local:AnimateFadeInProperty.Value="{Binding OverlayPageService.OverlayBackgroundVisible,
                                                   Source={x:Static local:ViewModelLocator.Instance}}" />-->

            <!-- Navigator menu panel -->
            <local:SideMenuControl
                AutomationProperties.AutomationId="SideMenuControl"
                local:AnimateSlideInFromLeftProperty.Value="{Binding ApplicationViewModel.SideMenuVisible,
                                                            Source={x:Static local:ViewModelLocator.Instance}}">

                <!-- Side menu page -->
                <Frame
                    AutomationProperties.AutomationId="SideMenuPage"
                    local:NoFrameHistory.Value="True"
                    DataContext="{Binding ApplicationViewModel.SideMenuPage,
                        Source={x:Static local:ViewModelLocator.Instance},
                        Converter={local:ApplicationPageValueConverter}}"
                    Content="{Binding}" />
            </local:SideMenuControl>
        </Grid>
    </Border>
</Window>